{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.bin/godot/godot4_bin",
            "args": [
                "--path",
                "${workspaceFolder}/godot"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/godot",
            "environment": [
                { 
                    "name": "RUST_LOG",
                    "value": "debug"
                }
            ],
            "externalConsole": true,
            "preLaunchTask": "Build GDExtension Lib",
        },
        {
            "name": "(Windows) Launch Editor",
            "type": "cppvsdbg",
