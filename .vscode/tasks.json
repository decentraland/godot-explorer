{
    "version": "2.0.0",
    "tasks": [        
        {
            "label": "Build GDExtension Lib",
            "type": "cargo",
            "command": "run",
            "args": [
                "--",
                "build",
                "--no-default-features", 
                "--features", 
                "use_livekit,use_deno,enable_inspector"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "env": {
                "GODOT4_BIN": "${workspaceFolder}/.bin/godot/godot4_bin"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}